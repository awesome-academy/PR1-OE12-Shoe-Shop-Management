<div class="col-md-6 col-md-offset-3">
  <div class="new-form">
    <%= form_for([:admin, @product], html: {multipart: true}) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.text_field :name, placeholder: t(".enter_name"), class: "form-control" %>
      <%= f.text_field :price, placeholder: t(".enter_price"), class: "form-control" %>
      <%= f.fields_for :image_products do |i| %>
        <div class= "field">
          <%= i.file_field :image, placeholder: t(".upload_img"), multiple: true, name: "image_products[image][]", class: "upload-image" %>
        </div>
      <% end %>
      <%= f.text_field :manufacturer, placeholder: t(".enter_manufacture"), class: "form-control" %>
      <%= f.text_field :status, placeholder: t(".enter_status"), class: "form-control" %>
      <div>
        <%= f.select :categories_id do %>
          <% @categories.each do |c| -%>
            <%= content_tag :option, c.name, value: c.id %>
          <% end %>
        <% end %>
      </div> <br>
      <%= f.text_field :description, placeholder: t(".enter_description"), class: "form-control" %>
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
